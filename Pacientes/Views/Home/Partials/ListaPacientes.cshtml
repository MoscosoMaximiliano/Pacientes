@model List<Pacientes.Models.Paciente>


<h2>Lista de Pacientes</h2>
<table class="table table-striped">
	<thead>
		<tr>
			<td>ID</td>
			<td>Nombre</td>
			<td>Apellido</td>
			<td>Edad</td>
			<td>Domicilio</td>
			<td>Acciones</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var paciente in Model)
		{
			<tr id="@paciente.ID">
				<td>@paciente.ID</td>
				<td>@paciente.Nombre</td>
				<td>@paciente.Apellido</td>
				<td>@paciente.Edad</td>
				<td name="address">@paciente.Domicilio</td>
				<td id="@paciente.ID">
					<button class="btn btn-default btn-sm" title="Editar" onclick="editar(@paciente.ID)">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</button>
					<button class="btn btn-default btn-sm" title="Eliminar" onclick="eliminar(@paciente.ID)">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</button>
				</td>
			</tr>
		}
	</tbody>
</table>